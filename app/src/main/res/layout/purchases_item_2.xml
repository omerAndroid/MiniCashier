<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/purchases_item_barcode"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
        android:text="dfdf" />

    <TextView
        android:id="@+id/purchases_item_name"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
        android:text="jjjjjjjjjjjjj" />

    <TextView
        android:id="@+id/purchases_item_sale"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"

        android:text="سعر الشراء" />

    <TextView
        android:id="@+id/purchases_item_quintity"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
        android:text="الكمية" />

    <TextView
        android:id="@+id/purchases_item_total"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
        android:text="الإجمالي" />

    <TextView
        android:id="@+id/purchases_item_free_guintity"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
        android:text="الكمية المجانية" />

    <TextView
        android:id="@+id/purchases_item_date_purchase"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
        android:text="تاريخ الشراء" />

    <TextView
        android:id="@+id/purchases_item_date_expare"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:scrollHorizontally="true"
         />

</LinearLayout>