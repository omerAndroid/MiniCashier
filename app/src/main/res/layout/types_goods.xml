<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/q_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="نوع الكمية"
            android:layout_weight="2"

            android:inputType="textPersonName" />


<!--        <Button-->
<!--            android:id="@+id/delete_btn"-->
<!--            android:layout_width="0dp"-->
<!--            android:visibility="gone"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@android:drawable/ic_menu_delete"-->
<!--             />-->


    <EditText
        android:id="@+id/q_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="الكمية في هذا النوع"
        android:inputType="number" />

    <EditText
        android:id="@+id/q_buy_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="سعر الشراء"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/q_sale_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="سعر البيع"
        android:inputType="number|numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_tg_dailog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إغلاق" />

        <Button
            android:id="@+id/save_tg_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="حفظ" />

    </LinearLayout>
</LinearLayout>