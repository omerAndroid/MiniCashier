<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/report_barcode"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="باركود" />

    <TextView
        android:id="@+id/report_name"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="الاسم" />

    <TextView
        android:id="@+id/report_data_1"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="البيانات 1" />

    <TextView
        android:id="@+id/report_data_2"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="البيانات 2" />

    <TextView
        android:id="@+id/report_data_3"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="البيانات 3" />

    <TextView
        android:id="@+id/report_data_4"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="البيانات 4" />

    <TextView
        android:id="@+id/report_data_5"
        android:layout_width="150dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:text="الاجمالي" />
</LinearLayout>